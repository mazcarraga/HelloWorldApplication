<div class="card shadow-sm mb-4 border-0">
  <div class="card-header fw-semibold text-dark" style="background-color: #f8f9fa;">
    <h4 class="mb-1"><%= @student.name %></h4>
    <small class="text-muted"><%= @student.program %> | Year <%= @student.year_level %></small>
  </div>

  <div class="card-body">
    <p><strong>Total Assessment:</strong> ₱<%= @student.total_assessment %></p>
    <p><strong>Total Units:</strong> <%= @student.number_of_units %></p>
    <p><strong>Department:</strong> <%= @student.department.name %></p>
  </div>
</div>

<h5 class="fw-semibold mb-3" style="color: #333;">📚 List of Subjects</h5>

<table class="table table-bordered table-striped align-middle" style="border-color: #dee2e6;">
  <thead class="table-light text-center">
    <tr>
      <th>Subject</th>
      <th>Section</th>
      <th>Units</th>
      <th>Teacher</th>
    </tr>
  </thead>
  <tbody>
    <% @student.classlists.each do |classlist| %>
      <tr>
        <td class="text-start"><%= classlist.section.subject.name %></td>
        <td class="text-start"><%= classlist.section.name %></td>
        <td class="text-start"><%= classlist.section.subject.number_of_units %></td>
        <td class="text-start"><%= classlist.section.subject.teacher.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-end gap-2 mt-4">
  <%= link_to "← Back to Students", students_path, class: "btn back-btn" %>
  <%= link_to "Edit Student", edit_student_path(@student), class: "btn edit-btn" %>
  <%= button_to "Delete", @student,
        method: :delete,
        data: { confirm: "Are you sure you want to delete this student?" },
        class: "btn delete-btn" %>
</div>

<style>
  .back-btn {
    background-color: #f8c8dc; 
    color: #333;
    border-radius: 6px; 
    border: none;
    padding: 0.4rem 0.9rem;
    font-weight: 500;
    transition: 0.3s;
  }

  .back-btn:hover {
    background-color: #f3a7c2;
  }

  .edit-btn {
    background-color: #c8f8e4; 
    color: #333;
    border-radius: 6px;
    border: none;
    padding: 0.4rem 0.9rem;
    font-weight: 500;
    transition: 0.3s;
  }

  .edit-btn:hover {
    background-color: #a8ebd0;
  }

  .delete-btn {
    background-color: #f8d0c8; 
    color: #333;
    border-radius: 6px;
    border: none;
    padding: 0.4rem 0.9rem;
    font-weight: 500;
    transition: 0.3s;
  }

  .delete-btn:hover {
    background-color: #f5a9a0;
  }

  .gap-2 > * {
    margin-left: 0.5rem;
  }
</style>
