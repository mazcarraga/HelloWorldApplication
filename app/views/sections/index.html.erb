<h1>List of Sections</h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Section Name</th>
      <th>Room</th>
      <th>Time Slot</th>
      <th>Subject</th>
      <th>Number of Students</th>
      <th>Show</th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.room %></td>
        <td><%= section.time_slot %></td>
        <td><%= section.subject.name %></td>
        <td><%= section.number_of_students %></td>
        <td><%= link_to "Show this section", section %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New section", new_section_path %>
